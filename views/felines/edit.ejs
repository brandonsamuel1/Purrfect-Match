<% include ../partials/header %>

<div class="container">
  <div class="row">
    <h1 style="text-align: center;">Edit <%= feline.name %></h1>
    <div style="width: 30%; margin: 30px auto;">
      <form action="/felines/<%= feline._id %>?_method=PUT" method="POST">
        <div class="form-group">
          <input class="form-control" type="text" value="<%= feline.name %>" name="feline[name]">
        </div>
        <div class="form-group">
          <input class="form-control" type="text" value="<%= feline.image %>" name="feline[image]">
        </div>
         <div class="form-group">
          <input class="form-control" type="text" value="<%= feline.age %>" name="feline[age]">
        </div>
        <div class="form-group">
          <input class="form-control" type="text" value="<%= feline.breed %>" name="feline[breed]">
        </div>
        <div class="form-group">
          <input class="form-control" type="text" value="<%= feline.description %>" name="feline[description]">
        </div>
        <div class="form-group">
          <button class="btn btn-success btn-lg btn-block">Submit</button>
        </div>
      </form>
      <a href="/felines/<%= feline._id %>">Go Back</a>
    </div>
  </div>
</div>
<% include ../partials/footer %>
