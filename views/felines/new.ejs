<% include ../partials/header %>

<div class="container">
  <div class="row">
    <h1 style="text-align: center;">Create New Adoption!</h1>
    <div style="width: 30%; margin: 30px auto;">
      <form action="/felines" method="POST">
        <div class="form-group">
          <input class="form-control" type="text" placeholder="Name" name="name">
        </div>
        <div class="form-group">
          <input class="form-control" type="text" placeholder="Image Url" name="image">
        </div>
        <div class="form-group">
          <input class="form-control" type="text" placeholder="Age" name="age">
        </div>
        <div class="form-group">
          <input class="form-control" type="text" placeholder="Breed" name="breed">
        </div>
        <div class="form-group">
          <input class="form-control" type="text" placeholder="Description" name="description">
        </div>
        <div class="form-group">
          <button class="btn btn-success btn-lg btn-block">Submit</button>
        </div>
      </form>
      <a href="/felines">Go Back</a>
    </div>
  </div>
</div>

