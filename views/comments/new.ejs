<% include ../partials/header %>

<div class="container">
  <div class="row">
    <h1 style="text-align: center;">Add New Comment </h1>
    <div style="width: 30%; margin: 30px auto;">
      <form action="/felines/<%= feline._id %>/comments" method="POST">
        <div class="form-group">
          <input class="form-control" type="text" placeholder="Comment" name="comment[text]">
        </div>
        <div class="form-group">
          <button class="btn btn-success btn-lg btn-block">Submit</button>
        </div>
      </form>
      <a href="/felines">Go Back</a>
    </div>
  </div>
</div>

